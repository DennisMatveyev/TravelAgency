<h1>Vacation tours:</h1>
{{#each vacations}}
    <div class="vacation">
        <h3>{{name}}</h3>
        <p>{{description}}</p>
        {{#if inSeason}}
            <span class="price">{{price}}</span>
            <a href="/cart/add?sku={{sku}}" class="btn btn-default">Buy Now!</a>
        {{else}}
        <span class="outOfSeason">It is not the season for this tour.
            <a href="/notify-me-when-in-season?sku={{sku}}">Notify me when the season comes up.</a>
        </span>
        {{/if}}
    </div>
{{/each}}